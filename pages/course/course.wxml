<scroll-view scroll-y class="DrawerPage {{modalName=='viewModal'?'show':''}}">
  <cu-custom bgColor="bg-gradual-blue" isBack="{{false}}">
    <view slot="backText">返回</view>
    <view slot="right" class='cu-btn shadow radius bg-green nav-left' bindtap="showModal" data-target="viewModal">
      导入/设置
    </view>
    <view slot="content">课程表</view>
  </cu-custom>
  <view class='date-control'>
    <view class="arrow" bindtap="preWeek">
      <image src="/res/com_arrow_left.png"/>
    </view>
    <view class="content">
      {{weekArr[weekIndex]}}
    </view>
    <view class="arrow" bindtap="nextWeek">
      <image src="/res/com_arrow_right.png"/>
    </view>
  </view>
  <view class="head corner">
    <view class="weeks left">
      <text>{{month}}</text>
      <text>月</text>
    </view>
    <view class="week-title" style="width: {{colWidth+6}}px" wx:for="{{dayArr}}" wx:key="week">
      <text>{{item.week}}</text>
      <text>{{item.date}}</text>
    </view>
  </view>
</scroll-view>
<view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
  <text class="cuIcon-pullright"></text>
</view>
<scroll-view scroll-y class="DrawerWindow {{modalName=='viewModal'?'show':''}}">
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
    <view class="cu-item arrow" wx:for="{{20}}" wx:key="index">
      <view class="content">
        <text class="cuIcon-github text-grey"></text>
        <text class="text-grey">{{index +1}}</text>
      </view>
    </view>
  </view>
</scroll-view>