/*--- date ---*/
.date-control {
  height: 30px;
  display: flex;
  align-items: center;
  background-color: white;
}

.date-control .arrow {
  width: 20px;
  height: 20px;
  background-color: #1296db;
  display: flex;
  justify-content: center;
  align-items: center;
}

.date-control .arrow:first-child {
  margin-left: 10px;
}

.date-control .arrow:last-child {
  margin-right: 10px;
}

.date-control .content {
  flex: 1;
  text-align: center;
}

.date-control .arrow image {
  width: 16px;
  height: 16px;
}
